<section class="three-col-icon-text">
    <div class="container">
        <div>
           {% if section.heading %}
               <h2 class="text-center mb-8 reveal--fade-in">{{ section.heading }}</h2>
           {% endif %}
            {% if section.icon_and_text %}
                {% if section.icon_position == 'left' %}
                    <div class="lg:flex flex-wrap justify-center">
                        {% for item in section.icon_and_text %}
                            <div class="flex my-4 lg:w-1/3 px-2 reveal--fade-in">
                                <div class="flex-0 mr-4"><img class="w-8" src="{{ Image( item.icon ) }}" alt=""></div>
                                <div class="flex-1">{{ item.text }}</div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="lg:flex flex-wrap justify-center">
                        {% for item in section.icon_and_text %}
                            <div class="flex flex-col items-center text-center my-4 lg:w-1/3 px-2 reveal--fade-in">
                                <div class="mb-4"><img class="h-16" src="{{ Image( item.icon ) }}" alt=""></div>
                                <div class="">{{ item.text }}</div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</section>